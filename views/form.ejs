<%- include('layouts/header') -%>
 

    <% if (typeof alert != 'undefined') { %>
        <% alert.forEach(function(error) { %>
            <div id="alert" class="alert alert-warning alert-dismissible fade show" role="alert">
                <%= error.msg %>
                
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <% }) %>
            <% } %>

        <form action="invoice" method="POST">
           


            <fieldset>
                <legend>Personal Information</legend>
            <p>
                <label for="name">Name:</label>
                <input type="text" name="name" id="name" ><br>
            </p>
                <p>
                <label for="email">E-Mail:</label>
                <input type="text" name="email" id="email" 
                  
                          placeholder="i.e: example@gmail.com"><br>
                        </p>
                          <p>
                <label for="phone">Phone:</label>
                <input type="tell" name="phone" id="phone" placeholder="999-999-9999"
                 ><br>
            </p>
                <p>
                <label for="address">Address:</label>
                <input type="text" name="address" id="address"><br>
            </p>
                <p>
                <label for="city">City:</label>
                <input type="text" name="city" id="city" ><br>
            </p>
                <p>
                <label for="zip">Post Code:</label>
                <input type="text" name="zip" id="zip" placeholder="i.e.: M4X A1Y"
                ><br>
            </p>
            <p>
                <label for="state">State:</label>
                <select name="state" id="state">
                    <option value="">Choice</option>
                  <option value="Ontario">Ontario</option>
                  <option value="Alberta">Alberta</option>
                    <option value="Manitoba">Manitoba</option>
                    <option value="Saskatchewan">Saskatchewan</option>
                    <option value="Quebec">Quebec</option>
                    <option value="Nova Scotia">Nova Scotia</option>
                    <option value="Newfoundland">Newfoundland</option>
                    <option value="Labrador">Labrador</option>
                    <option value="Nunavut">Nunavut</option>
                    <option value="Yukon">Yukon</option>
                    <option value="Northwest Territories">Northwest Territories</option>
                    <option value="Princess Edward Island">Princess Edward Island</option>
                    <option value="New Brunswick">New Brunswick</option>
                    <option value="British Colombia">British Colombia</option>
                    </select>
                </p>
            </fieldset>

            <fieldset>
                <legend>Products</legend>
                <p>
                    <label for="productFirst">Mouse :</label>
                    <input type="text" name="productFirst" id="productFirst"><br>
                </p>
                    <p>
                    <label for="productSecond">Keyboard:</label>
                    <input type="text" name="productSecond" id="productSecond" >
                </p>
            </fieldset>
                    <p>
                    </p>
                    <input type="submit" value="Submit" id="submit">
        </form>
        
<%- include('layouts/footer') -%>